<?xml version="1.0"?>
<config>
    <modules>
        <Zhao_Cache>
            <version>0.1.0</version>
        </Zhao_Cache>
    </modules>

	<global>
		<events>
            <controller_action_layout_render_before_cms_page_view>
                <observers>
                    <zhao_cache_cms_page_view>
                        <class>Zhao_Cache_Model_Cms_Page_View</class>
                        <method>cache</method>
                    </zhao_cache_cms_page_view>
                </observers>
            </controller_action_layout_render_before_cms_page_view>
            <controller_action_layout_render_before_cms_index_index>
                <observers>
                    <zhao_cache_cms_index_index>
                        <class>Zhao_Cache_Model_Cms_Page_View</class>
                        <method>cache</method>
                    </zhao_cache_cms_index_index>
                </observers>
            </controller_action_layout_render_before_cms_index_index>
			<cms_page_prepare_save>
                <observers>
                    <zhao_cache_cms_page_prepare_save>
                        <class>Zhao_Cache_Model_Adminhtml_Cms_Page</class>
                        <method>ClearCache</method>
                    </zhao_cache_cms_page_prepare_save>
                </observers>
			</cms_page_prepare_save>
			<adminhtml_cmspage_on_delete>
                <observers>
                    <zhao_cache_cmspage_on_delete>
                        <class>Zhao_Cache_Model_Adminhtml_Cms_Page</class>
                        <method>ClearCache</method>
                    </zhao_cache_cmspage_on_delete>
                </observers>
			</adminhtml_cmspage_on_delete>


            <controller_action_layout_render_before_catalog_product_view>
                <observers>
                    <zhao_cache_catalog_product_view>
                        <class>Zhao_Cache_Model_Catalog_Product_View</class>
                        <method>cache</method>
                    </zhao_cache_catalog_product_view>
                </observers>
            </controller_action_layout_render_before_catalog_product_view>
			<catalog_product_prepare_save>
                <observers>
                    <zhao_cache_catalog_product_prepare_save>
                        <class>Zhao_Cache_Model_Adminhtml_Catalog_Product</class>
                        <method>ClearCache</method>
                    </zhao_cache_catalog_product_prepare_save>
                </observers>
			</catalog_product_prepare_save>

            <controller_action_layout_render_before_catalog_category_view>
                <observers>
                    <zhao_cache_catalog_category_view>
                        <class>Zhao_Cache_Model_Catalog_Category_View</class>
                        <method>cache</method>
                    </zhao_cache_catalog_category_view>
                </observers>
            </controller_action_layout_render_before_catalog_category_view>
			<catalog_category_prepare_save>
                <observers>
                    <zhao_cache_catalog_category_prepare_save>
                        <class>Zhao_Cache_Model_Adminhtml_Catalog_Category</class>
                        <method>ClearCache</method>
                    </zhao_cache_catalog_category_prepare_save>
                </observers>
			</catalog_category_prepare_save>

			<admin_system_config_changed_section_zhaocache>
                <observers>
                    <zhao_cache_admin_system_config_changed_section_zhaocache>
                        <class>Zhao_Cache_Model_Adminhtml_System_Config</class>
                        <method>save</method>
                    </zhao_cache_admin_system_config_changed_section_zhaocache>
                </observers>				
			</admin_system_config_changed_section_zhaocache>
		</events>

		<helpers>
			<zhao_cache>
				<class>Zhao_Cache_Helper</class>
			</zhao_cache>
		</helpers>
	</global>

    <adminhtml>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <zhaocache translate="title" module="jeulia">
                                            <title>Zhao Cache Module Section</title>
                                        </zhaocache>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
</config>